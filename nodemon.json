{
  "watch": [
    "src/**/*",
    "pages/**/*",
    "app/**/*",
    "prisma/**/*",
    "lib/**/*",
    "components/**/*",
    "scripts/**/*",
    "next.config.*",
    "tailwind.config.*",
    "tsconfig.json",
    "package.json",
    ".env*"
  ],
  "ignore": [
    "node_modules/**/*",
    ".next/**/*",
    ".git/**/*",
    "storage/uploads/**/*",
    "public/uploads/**/*",
    "dist/**/*",
    "coverage/**/*",
    "*.log",
    "*.md",
    "**/*.test.*",
    "**/*.spec.*", 
    "**/__tests__/**",
    ".env.local",
    ".env.development.local",
    ".env.production.local",
    "dev-server.log",
    ".dev-server.pid"
  ],
  "ext": "ts,tsx,js,jsx,json,css,scss,sass,less,prisma,env,md",
  "env": {
    "NODE_ENV": "development",
    "NEXT_TELEMETRY_DISABLED": "1",
    "FORCE_COLOR": "1"
  },
  "exec": "node scripts/dev-server.js",
  "delay": 1000,
  "verbose": true,
  "colours": true,
  "restartable": "rs",
  "signal": "SIGUSR2",
  "events": {
    "start": "echo 'ðŸš€ Starting development server...'",
    "restart": "echo 'ðŸ”„ Restarting due to file changes...'",
    "crash": "echo 'ðŸ’¥ Development server crashed!'",
    "exit": "echo 'ðŸ‘‹ Development server stopped'"
  },
  "legacyWatch": false,
  "pollingInterval": 1000,
  "stdin": false
}